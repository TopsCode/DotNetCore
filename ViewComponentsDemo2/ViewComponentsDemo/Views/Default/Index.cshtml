
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@section Summary{

    @*Applying ViewComponent using Component property*@
    <div class="bg-info text-white m-2 p-2">
        @await Component.InvokeAsync("ProductSummary", new { units=45 })
    </div>

    <div class="bg-info text-white m-2 p-2">
        @*Applying ViewComponent using Tag Helper*@
        <vc:product-summary units="45"></vc:product-summary>
    </div>
}